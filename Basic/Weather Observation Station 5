WITH CTE_MIN AS (
SELECT TOP 1 CITY, LEN(CITY) AS LENG FROM STATION
WHERE LEN(CITY) = (SELECT MIN(LEN(CITY)) FROM STATION)
ORDER BY 1
),
CTE_MAX AS (
SELECT CITY, LEN(CITY) AS LENG FROM STATION
WHERE LEN(CITY) = (SELECT MAX(LEN(CITY)) FROM STATION)
)
SELECT * FROM CTE_MIN
UNION ALL
SELECT * FROM CTE_MAX
ORDER BY 2,1;
